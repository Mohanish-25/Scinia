<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ForyouFragment">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@drawable/img_max" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/app_name"
        android:background="@drawable/bottom_fade_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="150dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="New Delhi â€¢ 2 Km away"
            android:textSize="14sp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:drawableStart="@drawable/location"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:fontFamily="@font/sen_medium" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="Max Verstappen, 27"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/sen_bold" />

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="Hello everyone, I'm here to make new friends. Old ones ran away."
            android:textSize="14sp"
            android:gravity="center"
            android:maxLines="2"
            android:layout_marginTop="15dp"
            android:textColor="#65FFFFFF"
            android:fontFamily="@font/sen_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/next"
                android:src="@drawable/times"
                android:padding="17dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:tint="@color/white"
                android:background="@drawable/bg_icons" />

            <ImageView
                android:id="@+id/call"
                android:src="@drawable/microphone"
                android:padding="17dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginHorizontal="20dp"
                app:tint="@color/white"
                android:background="@drawable/bg_icon_pink" />

            <ImageView
                android:id="@+id/like"
                android:src="@drawable/like"
                android:padding="17dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:tint="@color/white"
                android:background="@drawable/bg_icons" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>